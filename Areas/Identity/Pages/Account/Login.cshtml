@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<style>
    /* Updated CSS for the Login Page */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #1b1b1b; /* Slightly lighter black for the page background */
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 900px; /* Fixed max-width for a larger form */
        width: 90%; /* Flexible width to fill the screen */
        margin: 50px auto;
        padding: 30px; /* Increased padding for more space inside the container */
        background-color: #2a2a2a; /* Darker container background */
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.4); /* Adjusted shadow for better depth */
        border-radius: 15px; /* Slightly more rounded corners */
        color: #f4f4f9;
    }

    h2 {
        font-size: 2rem; /* Increased font size for better readability */
        color: #ffcc00; /* Yellow color */
        text-align: center;
        margin-bottom: 25px;
    }

    p {
        color: #aaaaaa;
        text-align: center;
        margin-bottom: 15px;
    }

    .form-floating label {
        color: #aaaaaa;
        font-size: 0.95rem;
    }

    .form-control {
        background-color: #3b3b3b;
        color: #f4f4f9;
        border: 1px solid #555;
        border-radius: 8px; /* Slightly more rounded input fields */
        padding: 12px; /* Increased padding for better input field size */
        font-size: 1rem; /* Larger font size for better readability */
    }

        .form-control::placeholder {
            color: #777;
        }

    .btn-primary {
        background-color: #ffcc00; /* Yellow button */
        border: none;
        border-radius: 8px; /* Rounded button corners */
        padding: 12px;
        width: 100%;
        font-size: 1.1rem; /* Larger font size for the button text */
        color: #000;
    }

        .btn-primary:hover {
            background-color: #e6b800; /* Darker yellow on hover */
        }

    .checkbox {
        margin-top: 15px;
        font-size: 1rem; /* Increased font size */
    }

        .checkbox label {
            color: #f4f4f9;
        }

    .text-links a {
        color: #ffcc00; /* Yellow link color */
        text-decoration: none;
    }

        .text-links a:hover {
            text-decoration: underline;
        }

    .external-login button {
        background-color: #ffcc00; /* Yellow button for external login */
        color: #000;
        border: none;
        padding: 12px 25px; /* Increased button padding for better size */
        border-radius: 8px;
        margin: 8px;
        font-size: 1rem; /* Larger font size */
    }

        .external-login button:hover {
            background-color: #e6b800;
        }

    .text-center {
        text-align: center;
    }

    hr {
        border-top: 1px solid #444;
        margin: 25px 0;
    }
</style>



<div class="container">
    <section>
        <form id="account" method="post">
            <h2 class="text-center">Welcome back to the Claim App</h2>
            <p class="text-center">Please log in to manage your monthly claims.</p>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email Address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" /> Remember Me
                </label>
            </div>

            <div>
                <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
            </div>

            <div class="text-links mt-3">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account? Register here.</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>
        </form>
    </section>

    <section class="external-login text-center mt-5">
        <hr />
        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
            <div>
                <p>
                    No external login services configured.
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715">Learn more here</a>.
                </p>
            </div>
        }
        else
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div>
                    <p>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" name="provider" value="@provider.Name">@provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>
        }
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
