@model IEnumerable<ProgPoe.Models.UserViewModel>
 
<div class="container-dashboard">
<h2>Manage Users</h2>
 
    <table class="table table-hover">
<thead class="table-header">
<tr>
<th>Email</th>
<th>Phone Number</th>
<th>Role</th>
<th>Actions</th>
</tr>
</thead>
<tbody>

            @foreach (var user in Model)

            {
<tr>
<td>@user.Email</td>
<td>@user.PhoneNumber</td>
<td>@user.Role</td>
<td>
<a asp-action="Edit" asp-route-id="@user.Id" class="action-link">
<i class="fa-solid fa-pen-to-square"></i> Edit
</a>
<a asp-action="Delete" asp-route-id="@user.Id" class="action-link delete-link">
<i class="fa-solid fa-trash"></i> Delete
</a>
</td>
</tr>

            }
</tbody>
</table>
 
</div>
 