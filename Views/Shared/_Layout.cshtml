<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgPoe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProgPoe.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa; /* Light background for a fresh look */
            color: #343a40; /* Dark text for readability */
        }

        header {
            background-color: #007bff; /* Bootstrap primary color */
            color: white;
        }

        .navbar-brand, .nav-link {
            color: white !important; /* White text for navigation */
        }

        .navbar-toggler {
            border: none; /* No border for the toggle button */
        }

        footer {
            background-color: #343a40; /* Dark footer */
            color: white;
        }

        footer a {
            color: #ffc107; /* Yellow links in footer */
        }

        .container {
            margin-top: 20px; /* Space above the main content */
        }

        
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProgPoe</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Lecturer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Lecturer" asp-action="Claims">Lecturer Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Claim" asp-action="Create">Submit a Claim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Claim" asp-action="ViewClaimStatus">View Claims Status</a>
                            </li>
                        }
                        else if (User.IsInRole("Coordinator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Coordinator" asp-action="Index">Process Claims</a>
                            </li>
                        }
                        else if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="Index">Process Claims</a>
                            </li>
                        }

                        else if (User.IsInRole("HR Manager"))

                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="HR" asp-action="Dashboard"><i class="fa-solid fa-chart-simple"></i>  HR Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="HR" asp-action="ProcessPayments">
                                    <i class="fa fa-credit-card" aria-hidden="true"></i>

                                    Process Payments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="HR" asp-action="GenerateReport"><i class="fa fa-area-chart" aria-hidden="true"></i> Generate Reports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ManageUsers" asp-action="Index"><i class="fa fa-users" aria-hidden="true"></i> Manage Users</a>
                            </li>

                        }


                    </ul>
                    <div class="navbar-nav ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted text-center py-3">
        <div class="container">
            &copy; 2024 - ProgPoe - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
