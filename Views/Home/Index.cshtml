@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* CSS for the Home Page */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #1b1b1b;
        color: #f4f4f9;
        margin: 0;
        padding: 0;
        text-align: center;
    }

    .container {
        max-width: 900px;
        width: 90%;
        margin: 50px auto;
        padding: 20px;
        background-color: #2a2a2a;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        border-radius: 15px;
    }

    h1.title {
        font-size: 3.5rem;
        font-weight: bold;
        color: #ffcc00;
        margin-bottom: 20px;
    }

    p.subtitle {
        font-size: 1.2rem;
        color: #cccccc;
        margin-bottom: 40px;
    }

    .buttons {
        margin-top: 30px;
    }

        .buttons a {
            display: inline-block;
            padding: 10px 30px;
            margin: 10px;
            font-size: 1rem;
            text-decoration: none;
            color: #1b1b1b;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

            .buttons a.login {
                background-color: #ffcc00;
            }

                .buttons a.login:hover {
                    background-color: #e6b800;
                }

            .buttons a.register {
                background-color: #007bff;
                color: #f4f4f9;
            }

                .buttons a.register:hover {
                    background-color: #0056b3;
                }
</style>

<div class="container">
    <h1 class="title">Welcome to My Claim App</h1>
    <p class="subtitle">Manage your monthly claims efficiently. Login to track your claims or register to create an account.</p>
    <div class="buttons">
        <a href="/identity/Account/Login" class="login">LOGIN</a>
        <a href="/identity/Account/Register" class="register">REGISTER</a>
    </div>
</div>
