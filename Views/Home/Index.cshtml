@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* General Styles */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f5f7;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container-home {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .container-home h1 {
            font-size: 2.8rem;
            font-weight: 600;
            color: #4a90e2;
            margin-bottom: 15px;
        }

        .container-home p {
            font-size: 1.1rem;
            color: #555;
            margin-bottom: 30px;
        }

    /* Buttons Section */
    .buttons {
        margin-top: 20px;
    }

        .buttons a {
            display: inline-block;
            padding: 12px 25px;
            margin: 10px;
            font-size: 1rem;
            font-weight: bold;
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

            .buttons a.login {
                background-color: #4a90e2;
                color: #fff;
            }

                .buttons a.login:hover {
                    background-color: #357abd;
                }

            .buttons a.register {
                background-color: #ffcc00;
                color: #333;
            }

                .buttons a.register:hover {
                    background-color: #e6b800;
                }
</style>

<div class="container-home">
    <h1>Welcome to My Claim App</h1>
    <p>Track, manage, and streamline your claims effortlessly. Log in to access your account or register to join us today!</p>
    <div class="buttons">
        <a href="/identity/Account/Login" class="login">LOGIN</a>
        <a href="/identity/Account/Register" class="register">REGISTER</a>
    </div>
</div>
